{
  "plugins": [
    "prettier-plugin-astro",
    "prettier-plugin-tailwindcss",
    "prettier-plugin-classnames",
    "prettier-plugin-merge"
  ],
  "overrides": [
    {
      "files": "*.astro",
      "options": {
        "parser": "astro"
      }
    }
  ],
  "tabWidth": 2,
  "useTabs": false,
  "bracketSameLine": true,
  "tailwindFunctions": ["clsx"],
  "customFunctions": ["clsx"]
}
