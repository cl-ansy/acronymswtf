---
import Input from "@/components/astro/Input.astro";
import Button from "@/components/astro/Button.astro";
---

<form class="space-y-6" action="/api/auth/signin" method="POST">
  <div>
    <Input
      id="email"
      name="email"
      type="email"
      autocomplete="email"
      required={true}
      placeholder="Email Address"
      class="w-full"
    />
  </div>

  <div>
    <Input
      id="password"
      name="password"
      type="password"
      autocomplete="current-password"
      required={true}
      placeholder="Password"
      class="w-full"
    />
  </div>
  <div>
    <Button type="submit" class="w-full">Sign in</Button>
  </div>
</form>
