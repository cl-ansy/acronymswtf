---
interface Props {
  id: string;
  label?: string;
  name?: string;
  type?: "text" | "email";
  autocomplete?: string;
  required?: boolean;
  placeholder?: string;
  class?: string;
}

const {
  id,
  label,
  name,
  type,
  autocomplete,
  required,
  placeholder,
  class: className,
} = Astro.props;
---

<label for={id} class="sr-only">
  {label}
</label>
<input
  id={id}
  name={name}
  type={type}
  autocomplete={autocomplete}
  required={required}
  class:list={[
    "min-w-0 flex-auto rounded-md border-0 bg-foreground/5 px-2.5 py-1.5 text-foreground ring-1 ring-inset ring-foreground/10 focus:ring-2 focus:ring-inset focus:ring-primary sm:text-sm sm:leading-6",
    className,
  ]}
  placeholder={placeholder}
/>
