---
import Layout from "@/layouts/Layout.astro";
import Card from "@/components/astro/Card/Card.astro";
import CardHeader from "@/components/astro/Card/CardHeader.astro";
import CardContent from "@/components/astro/Card/CardContent.astro";
import CardFooter from "@/components/astro/Card/CardContent.astro";
import Input from "@/components/astro/Input.astro";
import Button from "@/components/astro/Button.astro";
import Link from "@/components/astro/Link.astro";
---

<Layout title=" | Register">
  <div class="w-full flex justify-center">
    <Card class="my-24">
      <CardHeader>
        <h2 class="text-center text-2xl font-bold leading-9 tracking-tight">
          Create an account
        </h2>
      </CardHeader>

      <CardContent>
        <form class="space-y-6" action="/api/auth/register" method="POST">
          <div>
            <Input
              id="email"
              name="email"
              type="email"
              autocomplete="email"
              required={true}
              placeholder="Email Address"
              class="w-full"
            />
          </div>

          <div>
            <Input
              id="password"
              name="password"
              type="password"
              autocomplete="new-password"
              required={true}
              minlength="8"
              maxlength="32"
              placeholder="Password"
              class="w-full"
            />
          </div>

          <div>
            <Button type="submit" class="w-full">Register</Button>
          </div>
        </form>
      </CardContent>

      <CardFooter>
        <p class="text-sm text-center">
          Already have an account?
          <Link href="/signin">Sign in</Link>
        </p>
      </CardFooter>
    </Card>
  </div>
</Layout>
